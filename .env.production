# =============================================================================
# Production Environment Configuration
# IMPORTANT: Copy this to .env and fill in real values before deploying
# =============================================================================

# Environment
NODE_ENV=production
LOG_LEVEL=info

# JWT Configuration (REQUIRED - use strong secrets in production)
# For RS256: generate with `openssl genrsa -out jwt-private.pem 4096`
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64
JWT_ISSUER=api-gateway
JWT_AUDIENCE=api-clients
JWT_EXPIRY=15m

# Redis Configuration
REDIS_ENABLED=true
REDIS_PASSWORD=CHANGE_ME_USE_OPENSSL_RAND_HEX_32
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Admin API Configuration
ADMIN_TOKEN=CHANGE_ME_USE_OPENSSL_RAND_HEX_64
ADMIN_ENABLED=true

# Metrics & Monitoring
METRICS_ENABLED=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_ENTRY_SIZE=1048576

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000

# Gateway Configuration
GATEWAY_PORT=443
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_FILE=/app/certs/fullchain.pem
TLS_KEY_FILE=/app/certs/server.key

# Monitoring (Grafana)
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME
PAGERDUTY_SERVICE_KEY=CHANGE_ME

# Domain (for Let's Encrypt)
DOMAIN=api.yourdomain.com
LETSENCRYPT_EMAIL=admin@yourdomain.com
