# API Gateway Environment Variables
# Copy this file to .env and update with your values

# JWT Configuration (REQUIRED)
# Generate a secure random secret: openssl rand -base64 32
JWT_SECRET=your-secure-secret-key-minimum-32-characters-long-please-change-me

# JWT Issuer and Audience (optional, defaults provided)
JWT_ISSUER=api-gateway
JWT_AUDIENCE=api-clients

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Environment
NODE_ENV=production

# Demo Credentials (DEVELOPMENT ONLY - DO NOT USE IN PRODUCTION)
# Only used when NODE_ENV=development and AUTH_USERS is not set
DEMO_ADMIN_PASSWORD=change-me-admin
DEMO_USER_PASSWORD=change-me-user

# Production User Configuration (PRODUCTION ONLY)
# JSON string with user credentials
# AUTH_USERS='{"admin":{"password":"hashed_password","id":"user_001","role":"admin"}}'

# Redis Configuration (optional - for distributed rate limiting and caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Admin API Configuration (optional - for runtime management)
# Generate a secure random token: openssl rand -hex 32
ADMIN_TOKEN=your-admin-token-keep-this-secret

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Cache Configuration
CACHE_ENABLED=false
CACHE_DEFAULT_TTL=300
CACHE_MAX_ENTRY_SIZE=1048576

# WebSocket Configuration
WEBSOCKET_ENABLED=false
WEBSOCKET_MAX_CONNECTIONS=100
